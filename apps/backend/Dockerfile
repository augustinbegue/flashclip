# ============================================================================
# Flashclip Backend - Dockerfile
# Generated by AGL CLI
# ============================================================================

# Stage 1: Install dependencies
FROM oven/bun:1-slim AS deps

WORKDIR /app

# Copy root and workspace package files
COPY package.json bun.lock* ./
COPY packages/types/package.json ./packages/types/
COPY packages/api-client/package.json ./packages/api-client/
COPY apps/backend/package.json ./apps/backend/

# Install dependencies
RUN bun install

# Stage 2: Build
FROM oven/bun:1-slim AS builder

WORKDIR /app

# Copy dependencies from deps stage
COPY --from=deps /app/node_modules ./node_modules

# Copy workspace packages and app source
COPY packages ./packages
COPY apps/backend ./apps/backend
ENV DATABASE_URL="file:/data/app.db"

# Generate Prisma client
RUN cd apps/backend && bunx prisma generate

# Stage 3: Production
FROM oven/bun:1-slim AS runner

WORKDIR /app/apps/backend

# Create non-root user for security
RUN groupadd --system nodejs && \
  useradd --system --uid 1001 --gid nodejs hono

# Copy built application
COPY --from=builder --chown=hono:nodejs /app/packages /app/packages
COPY --from=builder --chown=hono:nodejs /app/apps/backend /app/apps/backend
COPY --from=builder --chown=hono:nodejs /app/node_modules /app/node_modules

# Create data directory for SQLite
RUN mkdir -p /data && chown hono:nodejs /data
VOLUME ["/data"]

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3000
ENV DATABASE_URL="file:/data/app.db"

# Expose port
EXPOSE 3000

# Switch to non-root user
USER hono

# Health check
HEALTHCHECK --interval=30s --timeout=3s --start-period=5s --retries=3 \
  CMD wget --no-verbose --tries=1 --spider http://localhost:3000/health || exit 1

# Start the application
CMD ["bun", "run", "start"]
