// This is your Prisma schema file.
// Learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "sqlite"
}

generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  engineType = "client"
}

// ========== ENUMS ==========
// ========== MODELS ==========
model Video {
  id String @id @default(uuid())

  title       String
  description String
  url         String
  duration    Int
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  aijobs AIJob[]
}

model AIJob {
  id String @id @default(uuid())

  type   String  @default("summary")  // transcription, object-detection, scene-analysis, summary
  status String  @default("pending")  // pending, processing, completed, failed
  result String? // JSON result from AI processing
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations from object refs (this model is the "one" side or direct reference)
  video Video @relation(fields: [videoId], references: [id])

  videoId String
}
