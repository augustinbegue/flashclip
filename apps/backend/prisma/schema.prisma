datasource db {
  provider = "postgresql"
}

generator client {
  provider   = "prisma-client-js"
  output     = "../src/generated/prisma"
  engineType = "client"
}

// ========== ENUMS ==========
// ========== MODELS ==========
model Video {
  id String @id @default(uuid())

  title       String
  description String
  url         String
  duration    Int
  userId      String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  jobs        AIJob[]
}

model AIJob {
  id String @id @default(uuid())

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations from object refs (this model is the "one" side or direct reference)
  video Video @relation(fields: [videoId], references: [id])

  videoId String
}
